{
    "compilerOptions": {
        "baseUrl": ".",
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "strict": true,
        "resolveJsonModule": true,
        "jsx": "preserve",
        "sourceMap": true,
        "noImplicitAny": false,
        "lib": ["esnext", "dom"],
        "types": ["vite/client", "vite-svg-loader"],
        "plugins": [{ "name": "@vuedx/typescript-plugin-vue" }],
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "strictPropertyInitialization": false,
        "allowSyntheticDefaultImports": true,
        "paths": {
            "@/*": ["./src/client/*"],
            "@apps/*": ["./src/client/apps/*"],
            "@server/*": ["./src/server/*"]
        }
    },
    "include": [
        "src/client/**/*.d.ts",
        "src/client/**/*.tsx",
        "src/client/**/*.vue",
        "src/client/**/*.ts",
        "src/apps/**/*.tsx",
        "src/apps/**/*.vue",
        "src/apps/**/*.ts",
        "src/server/**/*.ts"
    ]
}
